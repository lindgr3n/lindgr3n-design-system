// Base from https://github.com/chromaui/learnstorybook-design-system/blob/download-2/src/shared/global.js
@import './styles.styl';
@import url('https://fonts.googleapis.com/css?family=Nunito+Sans:400,700,800,900');

$font-primary = 'Nunito Sans, Helvetica Neue, Helvetica, Arial, sans-serif';
$font-code = 'SFMono-Regular, Consolas, Liberation Mono, Menlo, Courier, monospace'

$size-s1 = 12px;
$size-s2 = 14px;
$size-s3 = 16px;
$size-m1 = 20px;
$size-m2 = 24px;
$size-m3 = 28px;
$size-l1 = 32px;
$size-l2 = 40px;
$size-l3 = 48px;
$size-code = 90px;
$size-tiny = 16px;
$size-small = 20px;
$size-medium = 28px;
$size-large = 40px;

$weight-regular = 400;
$weight-bold = 700;
$weight-extrabold = 800;
$weight-black = 900;

body {
    margin: 0;
    overflow-y: auto;
    overflow-x: hidden;

    font-family: $font-primary;
    font-size: $size-s3;
    color: $darkest;

    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    -webkit-tap-highlight-color: transparent;
    -webkit-overflow-scrolling: touch;

    * {
        box-sizing: border-box;
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        font-weight: $weight-regular;
        margin: 0;
        padding: 0;
    }

    button,
    input,
    textarea,
    select {
        outline: none;
        font-family: $font-primary;
    }

    sub,
    sup {
        font-size: 0.8em;
    }

    sub {
        bottom: -0.2em;
    }

    sup {
        top: -0.2em;
    }

    b,
    em {
    font-weight: $weight-bold;
    }

    hr {
        border: none;
        border-top: 1px solid $border;
        clear: both;
        margin-bottom: 1.25rem;
    }

    code,
    pre {
        font-family: $font-code;
        font-size: $size-s2;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    code {
        display: inline-block;
        padding-left: 2px;
        padding-right: 2px;
        vertical-align: baseline;

        color: $secondary;
    }

    pre {
        line-height: 18px;
        padding: 11px 1rem;
        white-space: pre-wrap;

        background: rgba(0, 0, 0, 0.05);
        color: $darkest;
        border-radius: 3px;
        margin: 1rem 0;
    }
}